// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//criar uma migration :yarn prisma migrate dev
model Usuarios {
  CODIGO       Int @id @default(autoincrement())
  NOME         String
  USUARIO      String
  CODCLI       String?
  SENHA        String
  NIVEL_ACESSO String
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_USUARIO   String    @default(uuid())
  
  // ID_USUARIO   String    @default(uuid())

  @@map("USUARIOS")
}

model Entidade {
  CODCLI       Int @id @default(autoincrement())
  NOME         String
  CNPJ         String
  EMAIL        String?
  TELEFONE     String?
  ENDERECO     String?
  CIDADE       String?
  BAIRRO       String?
  NUMERO       String?
  UF           String?
  FUNCAO       String?
  PAIS         String?
  COMPLEMENTO  String?
  CEP          String?
  TIPO         String?
  STATUS       String?
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_ENTIDADE  String    @default(uuid())

  @@map("ENTIDADE")
}

model Maquina {
  CODIGO       Int @id @default(autoincrement())
  DESCRICAO    String
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_MAQUINA   String   @default(uuid())

  @@map("MAQUINA")
}

model Represen {
  CODREP       Int @id @default(autoincrement())
  NOME         String
  CODCLI       String?
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_REPRESEN  String    @default(uuid())

  @@map("REPRESEN")
} 

model Produto {
  CODIGO       Int @id @default(autoincrement())  
  DESCRICAO    String
  PRECO        Float
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_PRODUTO   String @default(uuid())

  @@map("PRODUTOS")
}

model Receber {
  NUMERO        Int @id @default(autoincrement())
  CODCLI        String?
  CODREP        String?
  VALOR_TOTAL   Float?
  PARCELA       String?
  VALOR_PARCELA Float?
  DT_CADASTRO   DateTime? @default(now())
  DT_ALTERACAO  DateTime? @default(now())
  ID_RECEBER    String    @default(uuid())

  @@map("RECEBER")
}

model ReceberB {
  NUMERO        Int @id @default(autoincrement())
  CODCLI        String?
  CODREP        String?
  VALOR_PAGO    Float?
  PARCELA       String?
  VALOR_PARCELA Float?
  DT_PAGAMENTO  DateTime @default(now())
  ID_RECEBERB   String   @default(uuid())

  @@map("RECEBERB")
}

model Pagar {
  NUMERO        Int @id @default(autoincrement())
  CODCLI        String?
  CODREP        String?
  VALOR_TOTAL   Float?
  PARCELA       String?
  DT_VENCIMENTO DateTime @default(now())
  DT_CADASTRO   DateTime @default(now())
  DT_ALTERACAO  DateTime @default(now())
  ID_PAGAR      String   @default(uuid())

  @@map("PAGAR")
}

model PagarB {
  NUMERO       Int @id @default(autoincrement())
  CODCLI       String?
  CODREP       String?
  VALOR_TOTAL  Float?
  VALOR_PAGO   Float?
  PARCELA      String?
  DT_PAGAMENTO DateTime @default(now())
  ID_PAGARB    String   @default(uuid())

  @@map("PAGARB")
}
