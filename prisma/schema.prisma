// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//criar uma migration :yarn prisma migrate dev
model Usuarios {
  CODIGO       String
  NOME         String
  USUARIO      String
  CODCLI       String?
  SENHA        String
  NIVEL_ACESSO Int
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_USUARIO   String    @id @default(uuid())

  @@map("USUARIOS")
}

model Entidade {
  CODCLI       String
  NOME         String
  CNPJ         String
  EMAIL        String?
  TELEFONE     String
  ENDERECO     String
  CIDADE       String
  BAIRRO       String
  NUMERO       String
  UF           String
  FUNCAO       String
  PAIS         String
  COMPLEMENTO  String?
  CEP          String
  TIPO         String?
  STATUS       String?
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_ENTIDADE  String    @id @default(uuid())

  @@map("ENTIDADE")
}

model Maquina {
  CODIGO       String
  DESCRICAO    String
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_MAQUINA   String    @id @default(uuid())

  @@map("MAQUINA")
}

model Represen {
  CODREP       String
  NOME         String
  CODCLI       String
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_REPRESEN  String    @id @default(uuid())

  @@map("REPRESEN")
} 

model Produto {
  CODIGO       String    
  DESCRICAO    String
  PRECO        Float
  DT_CADASTRO  DateTime? @default(now())
  DT_ALTERACAO DateTime? @default(now())
  ID_PRODUTO   String @id @default(uuid())

  @@map("PRODUTOS")
}

model Receber {
  NUMERO        String
  CODCLI        String
  CODREP        String 
  VALOR_TOTAL   Float
  PARCELA       String
  VALOR_PARCELA Float
  DT_CADASTRO   DateTime? @default(now())
  DT_ALTERACAO  DateTime? @default(now())
  ID_RECEBER    String    @id @default(uuid())

  @@map("RECEBER")
}

model ReceberB {
  NUMERO        String
  CODCLI        String
  CODREP        String
  VALOR_PAGO    Float
  PARCELA       String
  VALOR_PARCELA Float
  DT_PAGAMENTO  DateTime @default(now())
  ID_RECEBERB   String    @id @default(uuid())

  @@map("RECEBERB")
}

model Pagar {
  NUMERO        String
  CODCLI        String
  CODREP        String
  VALOR_TOTAL   Float
  PARCELA       String
  DT_VENCIMENTO DateTime @default(now())
  DT_CADASTRO   DateTime @default(now())
  DT_ALTERACAO  DateTime @default(now())
  ID_PAGAR      String    @id @default(uuid())

  @@map("PAGAR")
}

model PagarB {
  NUMERO       String
  CODCLI       String
  CODREP       String
  VALOR_TOTAL  Float
  VALOR_PAGO   Float
  PARCELA      String
  DT_PAGAMENTO DateTime @default(now())
  ID_PAGARB    String    @id @default(uuid())

  @@map("PAGARB")
}
